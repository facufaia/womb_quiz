---
const PUBLIC_PATH_URL = import.meta.env.PUBLIC_PATH_URL;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href=`/assets/logo.ico` />
    <meta name="generator" content={Astro.generator} />
    <title>Womb Quiz</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-power-600 text-cloud-100">
    <header class="p-4 absolute left-4">
      <a href="/">
        <img
          src=`${PUBLIC_PATH_URL}/assets/logo.svg`
          alt="Logo de la Marca"
          class="h-40"
        /></a
      >
    </header>
    <slot />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
